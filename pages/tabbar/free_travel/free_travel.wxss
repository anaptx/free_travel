/* pages/tabbar/free_travel/free_travel.wxss */
.body{
  display: flex;
  justify-content: center;
  align-items: center;
}
.body .group{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.body .item {
  margin: 200rpx 20rpx;
  width:180rpx;
  height:140rpx;
  background:rgba(255,255,255,1);
  box-shadow:0rpx 4rpx 20rpx 0rpx rgba(0,0,0,0.1);
  border-radius:8rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  border: 0rpx solid red;
  position: relative;
  
}

.body .item .shade{
  width:185rpx;
  height:145rpx;
  background:rgba(0,0,0,0.1);
  box-shadow:0rpx 4rpx 20rpx 0rpx rgba(0,0,0,0.1);
  border-radius:10rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
  /*transition: all 0.5s;*/
}
.body .item .icon{
  width:100rpx;
  height:100rpx;
  font-size: 40rpx;
  
  display: flex;
  justify-content: center;
}
.body .item .icon image{
  margin-top: 15rpx;
  width:50rpx;
  height:50rpx;
}
.body .item .txt{
  margin-top: 15rpx;
  font-size:30rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(102,102,102,1);
  line-height:40rpx;
}
.icon-image{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  margin-top: 50rpx;
  left: 100rpx;
  z-index: 666;
}
.a{
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  top: 600rpx;
}