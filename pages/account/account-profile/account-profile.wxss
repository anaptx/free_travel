/* pages/account/account-profile/account-profile.wxss */
.login{
  display: flex;
  justify-content: center;
  font-size: 28rpx;
}
.head{
  margin-right: 250rpx;
}
.head-img{
  border-radius: 90rpx;
  width: 96rpx;
  height: 96rpx;
  box-shadow: 1rpx 1rpx 1rpx 1rpx rgb(190, 190, 190);
  z-index: 666;
}

.user-name{
  font-family:DFPYuanW9;
  margin-left: 10rpx;
  margin-top: 30rpx;
  font-weight: 600;
}
.goto-image{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 330rpx;
  right: 100rpx;
  z-index: 666;
}
.signature{
  font-size: 26rpx;
  margin-left: 10rpx;
  color: rgb(112, 112, 112);
}
.sync{
  font-size: 24rpx;
}
.sync-image{
  width: 48rpx;
  height: 48rpx;
}
.container .group{
  margin-top: 120rpx;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}
.container .item {
  margin: 0;
  width:200rpx;
  height:250rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  position: relative;
}
.container .item .icon{
  width:40rpx;
  height:40rpx;
  margin-bottom: 60rpx;
  display: flex;
  justify-content: center;
}
.container .item .icon image{
  width:45rpx;
  height:45rpx;
}
.container .item .txt{
  font-size:24rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  line-height:40rpx;
}